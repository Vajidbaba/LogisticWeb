@using Common.Core.ViewModels
@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row mt-7">
        <div class="col-xl-4 col-md-6 col-sm-12 d-flex flex-column mx-auto">
            <div class="card m-0 ">
                <div class="card-body p-0">
                    <div class="card card-plain">
                        <div class="card-header pb-0 pt-3 v-bg-color text-center">
                            <img src="~/assets/img/logo.png" class="w-25 mb-3">

                            <h5 class="font-weight-bolder text-white">Welcome back to Logistic</h5>
                            <p class="text-white text-xs">Enter your email and password to sign in</p>
                        </div>

                        <div class="card-body">
                            <form role="form" method="post" asp-action="Login" asp-controller="Login">
                                <label>Email</label>
                                <div class="mb-3">
                                    <input type="text" asp-for="UserId" class="form-control form-control-sm" placeholder="User Id" aria-label="UserId" aria-describedby="email-addon">
                                </div>
                                <label>Password</label>
                                <div class="mb-3">
                                    <input type="password" asp-for="Password" value="1111" class="form-control form-control-sm" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn text-capitalize v-bg-color btn-sm text-white w-100 mt-4 mb-0">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

