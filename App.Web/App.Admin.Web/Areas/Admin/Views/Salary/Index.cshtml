@model IEnumerable<Common.Data.Models.Employees>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Date of Joining</th>
            <th>Basic Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.Designation</td>
                <td>@employee.JoiningDate?.ToString("dd MMM yyyy")</td>
                <td>@employee.BasicSalary</td>
                <td>
                    <a asp-action="ViewSalary" asp-route-employeeId="@employee.Id" class="btn btn-sm btn-info">View Salary</a>
                    <a asp-action="GenerateSalary" asp-route-employeeId="@employee.Id" asp-route-month="@(DateTime.Now)" class="btn btn-sm btn-success">Generate Salary</a>
                </td>
            </tr>
        }
    </tbody>
</table>
