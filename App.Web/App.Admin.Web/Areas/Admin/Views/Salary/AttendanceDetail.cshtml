@model List<Common.Data.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Details";
    var employeeName = ViewBag.EmployeeName as string;
    var month = ViewBag.Month as string;
}

<h2>Attendance for @employeeName (@month)</h2>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendance in Model)
        {
            <tr>
                <td>@attendance.Date.ToString("dd-MMM-yyyy")</td>
                <td>@attendance.Status</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="ViewSalary" asp-route-employeeId="@Model.FirstOrDefault()?.EmployeeId" class="btn btn-secondary mt-3">Back</a>
