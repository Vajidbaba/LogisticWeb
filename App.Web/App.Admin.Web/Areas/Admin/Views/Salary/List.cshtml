@model List<Common.Data.Models.SalaryModel>

<h2>Salary Records</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Employee ID</th>
            <th>Salary Type</th>
            <th>Base Salary</th>
            <th>Overtime Pay</th>
            <th>Deductions</th>
            <th>Net Salary</th>
            <th>Payment Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salary in Model)
        {
            <tr>
                <td>@salary.Id</td>
                <td>@salary.EmployeeId</td>
                <td>@salary.SalaryType</td>
                <td>@salary.BaseSalary</td>
                <td>@salary.OvertimePay</td>
                <td>@salary.Deductions</td>
                <td>@salary.NetSalary</td>
                <td>@salary.PaymentDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("AddOrUpdate", "Salary", new { Id = salary.Id })" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("AddOrUpdate", "Salary")" class="btn btn-success">Add Salary</a>
