@model Common.Data.Models.Attendance

@{
    ViewData["Title"] = "Attendance Details";
}

<h1>Attendance Details</h1>

<div>
    <strong>Employee ID:</strong> @Model.EmployeeId
</div>
<div>
    <strong>Date:</strong> @Model.Date.ToString("dd-MM-yyyy")
</div>
<div>
    <strong>Status:</strong> @Model.Status
</div>
<div>
    <strong>Check-In Time:</strong> @Model.CheckInTime?.ToString("HH:mm")
</div>
<div>
    <strong>Check-Out Time:</strong> @Model.CheckOutTime?.ToString("HH:mm")
</div>

<div>
    <a href="@Url.Action("Index", "Attendance")" class="btn btn-primary">Back to List</a>
</div>
