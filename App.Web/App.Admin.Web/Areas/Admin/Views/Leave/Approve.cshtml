@model LeaveRequests

<h2>Leave Request Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Employee ID:</th>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <th>Leave Type:</th>
        <td>@Model.LeaveType</td>
    </tr>
    <tr>
        <th>Start Date:</th>
        <td>@Model.StartDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>End Date:</th>
        <td>@Model.EndDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Total Days:</th>
        <td>@Model.TotalDays</td>
    </tr>
    <tr>
        <th>Status:</th>
        <td>@Model.Status</td>
    </tr>
</table>

@if (Model.Status == "Pending")
{
    <form method="post" asp-action="Approve">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-success">Approve Leave</button>
    </form>

    <form method="post" asp-action="Reject">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Reject Leave</button>
    </form>
}
