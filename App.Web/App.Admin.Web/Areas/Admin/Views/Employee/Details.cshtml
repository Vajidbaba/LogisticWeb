@model Common.Data.Models.EmployeeModel;
@{
    ViewData["Title"] = "Details";
}
<h6 class="font-weight-bolder va-title text-primary"><span class="text-dark">Users / </span>Details</h6>



<div class="card">
    <div class="card-body p-3">
        <div class="row">
            <div class="col-6">
                <ul class="list-group">
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">User Id:</strong> @Model.Id</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Name:</strong> &nbsp; @Model.Name</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Mobile:</strong> @Model.Mobile</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Gender:</strong> @Model.Gender</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Email:</strong> @Model.Email</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">City:</strong> @Model.City</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">State:</strong> @Model.State</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">PinCode:</strong> @Model.PinCode</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Address:</strong> @Model.Address</li>
                </ul>
            </div>
            <div class="col-6">
                <ul class="list-group">
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Created On:</strong> &nbsp; @Model.AddedOn</li>
                    <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Created By:</strong> &nbsp; @Model.AddedBy</li>
                    @if (Model.UpdatedOn != null)
                    {
                        <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Updated On:</strong> @Model.UpdatedOn</li>
                    }
                    @if (Model.UpdatedBy != null)
                    {
                        <li class="list-group-item border-0 ps-0 text-xs"><strong class="text-dark">Updated By:</strong> @Model.UpdatedBy</li>
                    }
                    <li class="list-group-item border-0 ps-0 text-xs">
                        <strong class="text-dark">Status: </strong> &nbsp;

                        @if (@Model.isActive == true)
                        {
                            <span class="badge badge-sm text-xxs  bg-gradient-success"> Active</span>

                        }
                        else
                        {
                            <span class="badge badge-sm text-xxs  bg-gradient-secondary"> InActive</span>

                        }

                    </li>
                </ul>
            </div>
        </div>
        <button onclick="history.back()" class="badge mt-3 badge-sm btn-sm bg-gradient-dark">
            <i class="fa fa-arrow-left pe-1"></i> Back
        </button>
    </div>
</div>
