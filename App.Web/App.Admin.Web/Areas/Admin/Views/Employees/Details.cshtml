@model EmployeeModel

<h2>Employee Details</h2>

<table class="table table-striped">
    <tr><th>ID:</th><td>@Model.Id</td></tr>
    <tr><th>Name:</th><td>@Model.Name</td></tr>
    <tr><th>Email:</th><td>@Model.Email</td></tr>
    <tr><th>Contact:</th><td>@Model.Contact</td></tr>
    <tr><th>Department:</th><td>@Model.Department</td></tr>
    <tr><th>Role:</th><td>@Model.Role</td></tr>
    <tr><th>Salary Type:</th><td>@Model.SalaryType</td></tr>
    <tr><th>Date of Joining:</th><td>@Model.DateOfJoining.ToShortDateString()</td></tr>
</table>

<a href="@Url.Action("List", "Employees")" class="btn btn-primary">Back to List</a>
<a href="@Url.Action("AddOrUpdate", "Employees", new { Id = Model.Id })" class="btn btn-warning">Edit Employee</a>
