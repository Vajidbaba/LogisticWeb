@model EmployeeModel


<div class="card mt-2">
    <div class="card-body p-3">

        <form method="post" asp-action="AddOrUpdate">
            <div class="row">
                <div class="col-md-6 text-start d-flex align-items-center">
                    <h6 class="font-weight-bolder  text-primary"><span class="text-dark">@(Model.Id > 0 ? "Update Employee" : "Add Employee")</span></h6>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("List", "Employees")" class="btn btn-dark btn-sm px-3"><i class="fa fa-arrow-left text-sm"></i></a>
                    <button type="submit" class="btn btn-success">
                        @(Model.Id > 0 ? "Update Employee" : "Add Employee")
                    </button>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" asp-for="Name" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" asp-for="Email" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Contact:</label>
                        <input type="text" asp-for="Contact" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label>Department:</label>
                        <input type="text" asp-for="Department" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Role:</label>
                        <input type="text" asp-for="Role" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Salary Type:</label>
                        <select asp-for="SalaryType" class="form-control">
                            <option value="Hourly">Hourly</option>
                            <option value="Daily">Daily</option>
                            <option value="Monthly">Monthly</option>
                        </select>
                    </div>
                </div>
            </div>
           

          
        </form>
    </div>
</div>