@model List<Common.Data.Models.EmployeeModel>

<h2>Employee List</h2>

@if (!Model.Any())
{
    <p>No employees found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Department</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Contact</td>
                    <td>@employee.Department</td>
                    <td>@employee.Role</td>
                    <td>
                        <a href="@Url.Action("AddOrUpdate", "Employees", new { Id = employee.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Details", "Employees", new { Id = employee.Id })" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("AddOrUpdate", "Employees")" class="btn btn-success">Add New Employee</a>
