@model Common.Core.ViewModels.UsersModel;
@{
    ViewData["Title"] = "Add New User";
}
<h6 class="font-weight-bolder va-title text-primary"><span class="text-dark">Users / </span>Add New User</h6>

<div class="card m-0">

    <div class="card-body p-3">
        <form role="form" asp-controller="Users" asp-action="Create">
            <div class="row">
                <div class="col-3">
                    <label>Full Name</label>
                    <div class="mb-2">
                        <input type="text" asp-for="Username" class="form-control form-control-sm" placeholder="Full Name">
                    </div>
                </div>
                <div class="col-3">
                    <label>Mobile</label>
                    <div class="mb-2">
                        <input type="number" asp-for="Mobile" class="form-control form-control-sm" placeholder="Mobile">
                    </div>
                </div>
                <div class="col-3">
                    <label>Password</label>
                    <div class="mb-2">
                        <input type="text" asp-for="Password" class="form-control form-control-sm" placeholder="Password">
                    </div>
                </div>
                <div class="col-3">
                    <label>Role</label>

                    <select class="form-select form-select-sm" asp-for="Role" aria-label="Default select example">
                        <option selected>--select--</option>
                        <option value="1">Admin</option>
                        <option value="2">Client</option>
                        <option value="3">Supervisor</option>
                        <option value="4">User</option>
                    </select>
                </div>
            </div>

            <div class="row text-end mt-3">
                <div class="col-12 text-end ">
                    <input type="submit" value="Save" class="btn bg-success text-white btn-sm">
                    <a href="~/Admin/Users/List" class="btn bg-dark text-white ms-3 btn-sm">Cancel  </a>
                </div>
            </div>
        </form>


    </div>
</div>


