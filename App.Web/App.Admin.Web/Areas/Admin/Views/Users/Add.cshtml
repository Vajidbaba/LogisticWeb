@model Common.Data.Models.Users;
@{
    ViewData["Title"] = "Add New User";
}
<h6 class="font-weight-bolder va-title text-primary"><span class="text-dark">Users / </span>Add New User</h6>

<div class="card m-0">

    <div class="card-body p-0">
        <form role="form" asp-controller="Users" asp-action="Create">
            <div class="row">
                <div class="col-4">
                    <div class="card card-plain ">
                        <div class="card-body">
                            <label>Name</label>
                            <div class="mb-2">
                                <input type="text" asp-for="FullName" class="form-control form-control-sm" placeholder="Full Name" aria-label="Name" aria-describedby="email-addon">
                            </div>
                            <label>Role</label>
                            <div class="mb-2">
                                <select class="form-select form-select-sm" asp-for="Role" aria-label="Default select example">
                                    <option selected>--select--</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Client</option>
                                    <option value="3">Supervisor</option>
                                    <option value="4">User</option>
                                </select>
                              </div>
                            <div class="mt-4">
                                <input type="submit" value="Save" class="btn bg-success text-white btn-sm">
                                <a href="~/Admin/Orders/List" class="btn bg-dark text-white ms-3 btn-sm">Cancel  </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card card-plain ">
                        <div class="card-body">
                            <label>Email</label>
                            <div class="mb-2">
                                <input type="text" asp-for="Email" class="form-control form-control-sm" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                            </div>
                            <label>Password</label>
                            <div class="mb-2">
                                <input type="text" asp-for="Password" class="form-control form-control-sm" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                            </div>

                        </div>
                    </div>
                </div>
              
            </div>
        </form>


    </div>
</div>


