@model Common.Data.Models.Users;
@{
    ViewData["Title"] = "Update";
}
<h6 class="font-weight-bolder va-title text-primary"><span class="text-dark">Users / </span>Update </h6>




<div class="card m-0">

    <div class="card-body p-3">
        <form role="form" asp-controller="Users" asp-action="UpdateUser">
            <input type="hidden" asp-for="@Model.Id">

            <div class="row">
                <div class="col-3">
                    <label>Username</label>
                    <div class="mb-2">
                        <input type="text" asp-for="@Model.Username" class="form-control form-control-sm" placeholder="Username">
                    </div>
                </div>
                <div class="col-3">
                    <label>Mobile</label>
                    <div class="mb-2">
                        <input type="number" asp-for="@Model.Mobile" class="form-control form-control-sm" placeholder="Mobile">
                    </div>
                </div>
                <div class="col-3">
                    <label>Password</label>
                    <div class="mb-2">
                        <input type="text" asp-for="@Model.Password" class="form-control form-control-sm" placeholder="Password">
                    </div>
                </div>
                <div class="col-3">
                    <label>Role</label>

                    <select class="form-select form-select-sm" asp-for="@Model.Role" aria-label="Default select example">
                        <option selected>--select--</option>
                        <option value="1">Admin</option>
                        <option value="2">Client</option>
                        <option value="3">Supervisor</option>
                        <option value="4">User</option>
                    </select>
                </div>
            </div>

            <div class="row text-end mt-3">
              <div class="col-1">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Active">
                        <label class="form-check-label" for="flexCheckDefault"> Active </label>
                    </div>
              </div>
                <div class="col-11 text-end ">
                    <input type="submit" value="Save" class="btn m-0 bg-success text-white btn-sm">
                    <a href="~/Admin/Users/List" class="btn bg-dark text-white ms-3 mb-0 btn-sm"><i class="fa fa-arrow-left text-xs pe-1"></i> Back  </a>
                </div>
            </div>
        </form>


    </div>
</div>

